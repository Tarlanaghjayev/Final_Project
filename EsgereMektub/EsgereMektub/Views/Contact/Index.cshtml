<!-- Main Contact start -->
<main id="main">

    <!-- CONTACT HEADER start -->
    <div class="container">
        <div class="contact_header">
            <div class="row d-flex justify-content-center">

                <!--TITLE OF PAGE-->
                <p class="p">Bizimlə Əlaqə</p>
                <h3>Bizimlə Əlaqə</h3>

            </div>
        </div>
    </div>
    <!-- CONTACT HEADER end -->

    <!-- CONTACT SECTION start -->
    <section id="contact_body">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-xl-8">
                    <div class="letter-int-block news-int-block">
                        <div class="letter-int-content">
                            <h5>Layihə ilə bağlı hər hansı sual və ya təklifiniz varsa bizə yaza bilərsiniz!</h5>
                            <form method="post" action="@Url.Action("AddContact","Contact")">

                                <!--FORM FOR CONTACT US START-->
                                    <div class="form-row">

                                        <!--Name input start-->
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <input type="text" name="Name" class="form-control" placeholder="Ad Soyad">
                                            </div>
                                        </div>
                                        <!--Name input end-->
                                        <!--Mail input start-->
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <input type="email" name="Mail" class="form-control" placeholder="Email">
                                            </div>
                                        </div>
                                        <!--Mail input end-->
                                        <!--Phone input start-->
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <input type="text" name="Phone" class="form-control" placeholder="Telefon">
                                            </div>
                                        </div>
                                        <!--Phone input end-->
                                        <!--Note input start-->
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <textarea class="form-control" name="Text" id="exampleFormControlTextarea1" rows="3"
                                                          placeholder="Qeyd"></textarea>
                                            </div>
                                        </div>
                                        <!--Note input end--><div class="col-lg-12">
                                        <div class="row d-flex justify-content-center">
                                            <a href="#">
                                                <button type="submit" class="btn waves-effect">Göndər</button>
                                            </a>
                                        </div>
                                        </div>

                                    </div>
                               
                                <!--FORM FOR CONTACT US END-->
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- CONTACT SECTION end -->
</main>
<!-- Main Contact end -->